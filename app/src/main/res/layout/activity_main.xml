<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonRecherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="recherche"
        android:text="Recherche"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />

    <Button
        android:id="@+id/btnMaison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maison"
        android:onClick="maisonTag"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toStartOf="@+id/btnAppartement"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnAppartement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appartement"
        android:onClick="appartementTag"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643"
        tools:ignore="OnClick" />

    <EditText
        android:id="@+id/Rayon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="195dp"
        android:layout_height="167dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTypeBiens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29"
        app:srcCompat="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txtTypeBiens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type de biens"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnMaison"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912" />

    <TextView
        android:id="@+id/txtNbPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de piÃ¨ces"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.859" />

    <TextView
        android:id="@+id/txtMinPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min."
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNbPieces"
        app:layout_constraintVertical_bias="0.372" />

    <EditText
        android:id="@+id/minPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:hint="1"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toStartOf="@+id/txtMaxPieces"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtMinPieces"
        app:layout_constraintTop_toBottomOf="@+id/txtNbPieces"
        app:layout_constraintVertical_bias="0.411" />

    <EditText
        android:id="@+id/maxPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="8"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toEndOf="@+id/txtMaxPieces"
        app:layout_constraintTop_toBottomOf="@+id/txtNbPieces"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/txtMaxPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max."
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNbPieces"
        app:layout_constraintVertical_bias="0.395" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rangeSlider2"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:stepSize="1.0"
        android:valueFrom="1.0"
        android:valueTo="8.0"
        app:layout_constraintBottom_toTopOf="@+id/buttonRecherche"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798"
        app:values="@array/initial_slider_values"
        tools:ignore="MissingConstraints,UnknownId" />


</androidx.constraintlayout.widget.ConstraintLayout>