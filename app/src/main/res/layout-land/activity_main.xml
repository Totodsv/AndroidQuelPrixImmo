<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonRecherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="recherche"
        android:text="Recherche"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />

    <Button
        android:id="@+id/btnMaison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="maisonTag"
        android:text="Maison"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toStartOf="@+id/btnAppartement"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnAppartement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="appartementTag"
        android:text="Appartement"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="195dp"
        android:layout_height="167dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTypeBiens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txtTypeBiens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type de biens"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnMaison"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <TextView
        android:id="@+id/txtNbPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de piÃ¨ces"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774" />

    <TextView
        android:id="@+id/txtMinPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min."
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNbPieces"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/minPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:hint="1"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toStartOf="@+id/txtMaxPieces"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtMinPieces"
        app:layout_constraintTop_toBottomOf="@+id/txtNbPieces"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/maxPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="8"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toEndOf="@+id/txtMaxPieces"
        app:layout_constraintTop_toBottomOf="@+id/txtNbPieces"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/txtMaxPieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max."
        app:layout_constraintBottom_toTopOf="@+id/rangeSlider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNbPieces"
        app:layout_constraintVertical_bias="0.4" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rangeSlider2"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:stepSize="1.0"
        android:valueFrom="1.0"
        android:valueTo="8.0"
        app:layout_constraintBottom_toTopOf="@+id/buttonRecherche"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954"
        app:values="@array/initial_slider_values"
        tools:ignore="MissingConstraints,UnknownId" />


</androidx.constraintlayout.widget.ConstraintLayout>